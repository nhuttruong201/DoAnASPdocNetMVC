@model IEnumerable<DO_AN_APS_DOC_NET_MVC.Models.KingClothes.Order> 
@{
    ViewBag.Title = "Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row mb-5">
    <div class="container mt-5 p-0">
        <h4 class="text-center text-uppercase p-3" style="color: #5ecfbc;">Đơn hàng của bạn</h4>
        <div class="row">

            @if (Model.Count() > 0)
            {
                <div class="col-sm-12 text-center">
                    <span class="">Có <span class="font-weight-bold">@ViewBag.OrderWaiting đơn hàng </span>chờ xác nhận</span>
                </div>
                <div class="col-12 mt-4">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã ĐH</th>
                                <th>SDT</th>
                                <th>Địa Chỉ</th>
                                <th>Ngày Đặt</th>
                                <th>Lời Nhắn</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt++;
                                <tr>
                                    <td>@stt</td>
                                    <td>@item.Id_Order</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Address</td>
                                    <td>@item.Date</td>
                                    <td>@item.Message</td>
                                    <td class="text-uppercase font-weight-bold">
                                        @if (item.IsCheck)
                                        {
                                            <span class="text-success">Đã Xác Nhận</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Chờ Xác Nhận</span>
                                        }
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="col-sm-12 text-center">
                    <span>Bạn chưa có đơn hàng nào!</span>
                </div>
                <div class="col-12 text-center mt-3">
                    <a href="/" type="button" class="btn btn-success">Tiếp Tục Mua Hàng</a>
                </div>
            }

        </div>
    </div>
</div>

