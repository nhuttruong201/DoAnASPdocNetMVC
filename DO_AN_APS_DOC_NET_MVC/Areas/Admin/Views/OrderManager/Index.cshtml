@model IEnumerable<DO_AN_APS_DOC_NET_MVC.Models.KingClothes.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<div class="container">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Image_Front)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCheck)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Image_Front)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCheck)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_Order }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Order }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Order })
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#order_manager").addClass("active");
        });
    </script>
}