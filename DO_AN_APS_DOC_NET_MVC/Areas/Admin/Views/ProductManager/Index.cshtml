@model IEnumerable<DO_AN_APS_DOC_NET_MVC.Models.KingClothes.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<div class="container">
    <h2>Quản Lý Sản Phẩm</h2>
    <p>
        @Html.ActionLink("Thêm Sản Phẩm", "Create")
    </p>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_Front)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_Back)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Num)*@
                SL
            </th>
            <th class="text-center">
                Thao Tác
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Model.Name)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Image_Front)" alt="Ảnh mặt trước" height="60" />
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Image_Back)" alt="Ảnh mặt sau" height="60" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num)
                </td>
                <td class="text-center">
                    @*<i class="fas fa-pencil-alt text-primary"></i>*@
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_Product })
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id_Product }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id_Product })*@
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#product_manager").addClass("active");
        });
    </script>
}