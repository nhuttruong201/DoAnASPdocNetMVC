@model IEnumerable<DO_AN_APS_DOC_NET_MVC.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<div class="container">
    <h2>Quản Lý Danh Mục</h2>
    <p>
        @Html.ActionLink("Thêm Danh Mục", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_Cover)
            </th>
            <th>
                Thao Tác
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image_Cover)" height="60" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Category }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Category })
            </td>
        </tr>
        }

    </table>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#category_manager").addClass("active");
        });
    </script>
}